@using System.Web.Mvc.Html
@using System.Web.Mvc
@using Cascade.WebShop.ViewModels
@{
    var login = (LoginViewModel)Model.Login;

    Style.Require("Cascade.WebShop.Common");
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>@T("Returning customer")</h2>
            <p>@T("Please sign in:")</p>
            @Html.ValidationSummary()
        </div>
    </div>
    @using (Html.BeginFormAntiForgeryPost(Url.Action("Login", "Checkout", new { area = "Cascade.WebShop" }), FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <div class="control-label col-sm-2">@Html.LabelFor(m => login.Email, T("Email"))</div>
            <div class="col-sm-10">@Html.TextBoxFor(m => login.Email, new { @class = "form-control" })</div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">@Html.LabelFor(m => login.Password, T("Password"))</div>
            <div class="col-sm-10">@Html.PasswordFor(m => login.Password, new { @class = "form-control" })</div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">@Html.LabelFor(m => login.Password, @T("Remember me"))</div>
            <div class="col-sm-10">
                <label class="forcheckbox">
                    @Html.CheckBoxFor(m => login.CreatePersistentCookie, new { @class = "form-control" })
                </label>
            </div>
        </div>
        <div class="forms-actions">
            <a class="btn btn-info" href="#">@T("Cancel")</a>
            <button type="submit" class="pull-right btn btn-primary">@T("Sign in")</button>
        </div>
    }
</div>

